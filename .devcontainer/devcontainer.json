{
  "name": "neat-memo",
  "dockerComposeFile": "compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace/neat-memo",

  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "amazonwebservices.aws-toolkit-vscode",
        "bradlc.vscode-tailwindcss",
        "formulahendry.auto-rename-tag",
        "anthropic.claude-code"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/bin/python3",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "[python]": {
          "editor.defaultFormatter": "ms-python.python"
        }
      }
    }
  },
  "postCreateCommand": "pip3 install --break-system-packages aws-sam-cli aws-cdk-lib && npm install -g aws-cdk @anthropic-ai/claude-code && echo 'Dev container ready!'",
  "forwardPorts": [3000, 5173, 8000, 3306],
  "remoteUser": "vscode"
}
